- @logos.each do |logo|
  .msnry-item
    .msnry-aspect-inner
      .msnry-logo-title= logo.title
      - if logo.animation.present?
        .msnry-gif-icon.js-play{'data-video': logo.animation_url} GIF

      -# .msnry-open-icon

      %img.msnry-logo.lazyload{'data-src': logo.image_gray_url, alt: logo.title, src: image_path('0.png')}

      - if logo.image_colorfull.present?
        %img.msnry-logo-color.lazyload{'data-src': logo.image_colorfull_url, alt: logo.title, src: image_path('0.png')}

      - unless request.xhr?
        %noscript
          %img.msnry-logo{src: logo.image_gray_url, alt: logo.title}
